{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Hit",
  "type": "object",
  "properties": {
    "local_names": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "city": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "administrative": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "country": {
      "type": "string"
    },
    "_highlightResult": {
      "type": "object",
      "properties": {
        "local_names": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/HighlightValue"
          },
          "minItems": 1
        },
        "city": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/HighlightValue"
          },
          "minItems": 1
        },
        "administrative": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/HighlightValue"
          },
          "minItems": 1
        },
        "country": {
          "$ref": "#/definitions/HighlightValue"
        }
      },
      "required": [
        "local_names",
        "city",
        "administrative",
        "country"
      ]
    },
    "_tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "_geoloc": {
      "type": "object",
      "properties": {
        "lat": {
          "type": "number",
          "minimum": -90,
          "maximum": 90
        },
        "lng": {
          "type": "number",
          "minimum": -180,
          "maximum": 180
        }
      }
    },
    "postcode": {
      "type": "string"
    }
  },
  "required": [
    "local_names",
    "country",
    "_highlightResult",
    "_tags",
    "_geoloc"
  ],
  "definitions": {
    "HighlighValue": {
      "type": "object",
      "properties": {
        "value": {
          "type": "string"
        },
        "matchLevel": {
          "type": "string",
          "enum": [
            "none", "partial", "full?"
          ]
        }
      },
      "required": [
        "value",
        "matchLevel"
      ]
    }
  }
}